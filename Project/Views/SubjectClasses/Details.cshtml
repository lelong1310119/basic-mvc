@model Project.Models.Entities.SubjectClass

@{
    ViewData["Title"] = "Details SubjectClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>SubjectClass</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectClassId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectClassId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.LecturerId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectId)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã sinh viên
                </th>
                <th>
                    Tên sinh viên
                </th>
                <th>
                    Ngày
                </th>
                <th>
                    Điểm
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.Scores != null)
            {
                @foreach (var score in ViewBag.Scores)
                {
                    <tr>
                        <td>@score.StudentId</td>
                        <td>@score.Student.FullName</td>
                        <td>@score.Date</td>
                        <td>@score.ScoreSubject</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SubjectClassId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
